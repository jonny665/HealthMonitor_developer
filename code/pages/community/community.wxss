/* pages/home/home.wxss */
@import "../templates/components.wxss";

.search-top{
    position: fixed;
    background-color: #1afa29;
    top: -1rpx;
    height: 75rpx;
    width: 100%
}
.search-form{
    position: fixed;
    width: 100%;
}
.search-button{
    height:60rpx;
    background-color: #eff2f5;
    border:none;
    border-radius: 30rpx;
    margin:7rpx 30rpx 0rpx 30rpx;
    padding-left: 60rpx;
    padding-right: 30rpx;
    font-size: 28rpx;
    color: #a0a0a0;
}
.search-hint{
    position: fixed;
    top:17rpx;
    left:90rpx;
    font-size: 28rpx;
    color: #a0a0a0;
}
.search-icon{
    position: fixed;
    left: 40rpx;
    top:12rpx;
    width: 50rpx;
    height: 50rpx;
}



.swiper-tab{   
    width: 100%;  
    border-bottom: 1rpx solid #e0e0e0;  
    text-align: center;  
    line-height: 80rpx;
    position: fixed;
    top:75rpx;
    background-color: rgba(250, 250, 250,1);
 }  
.swiper-tab-list{
    font-size: 28rpx;  
    display: inline-block;  
    width: 25%;  
    color: #a0a0a0;  
}  
.on{ color: #1afa29;  
    border-bottom: 5rpx solid #1afa29;}  
  

.swiper-box{   
    position: fixed;
    top:79rpx;
    height: 100%; 
    width: 100%; 
    background-color: #e5e5e5;
    overflow: visible; 
    border-block-start: 1rpx solid #e0e0e0;
}  
.scroll-box{
    position: relative; 
    background-color: #fff;
}  

.canvas{
    position: fixed;
    bottom: -5rpx;
}



.refresh_root {
  background-color: #e5e5e5;
  width: 100%;
  text-align: center;
  margin-top: 10px;
}

.refresh {
  width: 40rpx;
  height: 40rpx;
  margin-top: 75rpx;
}
.isrefresh-text{
    font-size: 28rpx;
    margin-top: -5rpx;
    padding-bottom: 20rpx;
    color: #a0a0a0;
}

.top-notice{
    height:30rpx;
    margin-top:30rpx;
    text-align: center;
    font-size: 28rpx;
    color: #a0a0a0;
    margin-bottom: 20rpx;
}
.bottom-notice{
    height:30rpx;
    margin-top:10rpx;
    text-align: center;
    font-size: 28rpx;
    color: #a0a0a0;
    margin-bottom:10rpx;       
}

