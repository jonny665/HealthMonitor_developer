<view class="container">

<view class="middle-info">

  <view style='font-size:45px;color:#1afa29;'>{{heat}}卡路里</view>
  <view style='font-size:15px'>今日热量</view>
</view>

  <view class="bottom-info">
  <view style='font-size:16px; color:darkgray;'>今日摄食</view>
  <view class="item" style='margin-top:20px;'>
    <view class="section" style='width: 150px;height:70px'>

      <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
        <view class="picker">
          {{array[index][0]}}
        </view>
      </picker>
    </view>
    <view style='width:100px;'>{{array[index][1]}}</view>
    <view><image src="/image/icon/right.png" mode="aspectFit" style='width:30px; height:30px;'></image></view>
  </view>
</view>

<button bindtap="signBtn" class="yellow-btn"  style='margin-top:30px;background-color:{{btnColor}}; font-size:18px' > {{sign}} </button>

</view>